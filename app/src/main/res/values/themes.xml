<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReFood" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fillColor">@color/black</item>
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.ReFood" parent="Base.Theme.ReFood">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded
        </item>
        <item name="backgroundTint">?android:attr/fillColor</item>
    </style>

    <style name="MyThemeOverlay.MaterialComponents.MyRecipeDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded
        </item>
        <item name="backgroundTint">?android:attr/fillColor</item>

    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="dialogstyle">
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowAnimationStyle">@style/animations</item>
        <item name="android:backgroundDimEnabled">@style/animations</item>
    </style>

    <style name="animations">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
</resources>